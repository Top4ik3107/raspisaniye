<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViborRassilki3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

        </FrameLayout>

        <TextView
            android:id="@+id/textView129"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="Группа: П1А"
            android:textColor="@color/white"
            android:textSize="28dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView130"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Info" />

            <TextView
                android:id="@+id/textView131"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="- Состав:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textView135"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="70dp"
                android:layout_marginTop="-30dp"
                android:text="25 человек"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textView132"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="- Колледж:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textView136"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="60dp"
                android:text="CATEC"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView133"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="- Преподователь:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textView137"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-30dp"
                android:layout_marginLeft="10dp"
                android:text="Наталья Николаевна"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView134"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="- Староста:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textView138"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="40dp"
                android:text="Фархатов Наиль"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:onClick="sub"
            android:background="@drawable/roundblu"
            >

            <TextView
                android:id="@+id/textView139"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Подписаться"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>