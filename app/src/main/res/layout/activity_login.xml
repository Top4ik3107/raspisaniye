<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:fontFamily="@font/thin"
            android:text="Вход"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Войдите в аккаунт что бы продолжить"
            android:gravity="center"
            android:textColor="@color/white"
            android:alpha="0.5"
            android:textSize="16sp"
            android:fontFamily="@font/reg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/roundgraybord"
            android:layout_marginTop="70dp"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Введите данные"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/thin"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:padding="8dp"
                    android:fontFamily="@font/reg"
                    android:background="@drawable/roundblu"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:hint="Введите почту"
                    android:textColorHint="@color/grey3"

                    android:layout_marginBottom="10dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textColorHint="@color/grey3"
                    android:hint="Введите пороль"
                    android:fontFamily="@font/reg"
                    android:background="@drawable/roundblu"
                    android:inputType="textPassword"
                    android:layout_marginBottom="5dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Забыли пороль"
                android:textColor="@color/white"
                android:alpha="0.5"


                />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Зарегистрироваться"
                android:textColor="@color/white"
                android:alpha="0.5"
                android:layout_marginBottom="30dp"
                />

            <FrameLayout
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/roundwhite"
                android:text="Button" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="Button" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:onClick="GoToObuchenie"
                android:background="@drawable/roundblu">

                <TextView

                    android:id="@+id/textView49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/light"
                    android:textColor="@color/black"
                    android:textSize="20sp"

                    android:text="Продолжить" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>