<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alp"

    >

    <LinearLayout
        android:id="@+id/mainl"
        android:layout_width="700px"
        android:layout_height="640px"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/roundgraybord"
        android:padding="20dp"

        >

        <TextView
            android:id="@+id/textView97"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:gravity="center"
            android:fontFamily="@font/thin"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/editTextText9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/roundwhitebord"
            android:padding="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/thin"
            android:textColorHint="@color/white"
            android:hint="Name"
            android:textSize="12sp"
            android:layout_marginVertical="20dp"

             />

        <FrameLayout
            android:id="@+id/f1"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundblu"
           >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Добавить дз" />
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>